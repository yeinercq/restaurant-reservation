<%= turbo_frame_tag restaurant do %>
  <div class="col mb-2">
    <div class="card shadow">
      <div class="card-body">
        <div class="d-flex justify-content-center mb-4">
          <%= image_tag(restaurant.photo_url, class: "img-fluid rounded-circle img-thumbnail shadow-sm") if restaurant.photo? %>
        </div>

        <%= link_to restaurant_path(restaurant), data: { turbo_frame: "_top" } do %>
          <h4 class="card-title"><%= restaurant.name %></h4>
        <% end %>
        <p class="card-text"><%= restaurant.description %></p>
        <table class="table table-borderless ">
          <tbody>
            <tr>
              <td>City: </td>
              <td><%= restaurant.city %></td>
            </tr>
            <tr>
              <td>Address: </td>
              <td><%= restaurant.address %></td>
            </tr>
            <tr>
              <td>Today reservations: </td>
              <td><strong><%= restaurant.today_reservations_count %></strong></td>
            </tr>
          </tbody>
        </table>
        <div class="d-flex gap-2 justify-content-center">
          <%= button_to restaurant_path(restaurant), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-light" do %>
          <i class="bi bi-trash"></i>
          <% end %>
          <%= link_to edit_restaurant_path(restaurant), data: { turbo_frame: "remote_modal" }, class: "btn btn-light" do %>
          <i class="bi bi-pencil-square"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
